<!-- app/views/bookmarks/_form.html.erb -->
<%= form_with model: [ @list, @bookmark ], local: true do |form| %>
  <div class="form-group">
    <%= form.label :movie_id, "Select Movie" %>
    <%= form.collection_select :movie_id, Movie.all, :id, :title, { prompt: "Choose a movie" }, { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= form.label :comment %>
    <%= form.text_area :comment, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Add Movie", class: "btn btn-primary" %>
  </div>
<% end %>
