<h1 class="mb-4 text-center">All Lists</h1>
<div class="container">
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100">
          <div class="card-body d-flex flex-column justify-content-between">
            <h5 class="card-title text-center custom-list-text">
              <%= link_to list.name, list_path(list), class: 'stretched-link text-decoration-none custom-link-color' %>
            </h5>

          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="d-flex justify-content-center mt-4">
  <%= link_to 'Create New List', new_list_path, class: 'btn btn-primary btn-lg mx-2 custom-primary-btn' %>
  <%= link_to 'View All Movies', movies_path, class: 'btn btn-secondary btn-lg mx-2 custom-secondary-btn' %>
</div>
