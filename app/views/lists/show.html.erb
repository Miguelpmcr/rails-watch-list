<h1><%= @list.name %></h1>
<h2>Movies:</h2>
<ul>
  <% @bookmarks.each do |bookmark| %>
    <li>
      <%= bookmark.movie.title %> - <%= bookmark.comment %>
      <%= link_to 'Remove', bookmark_path(bookmark), method: :delete %>
    </li>
  <% end %>
</ul>
<%= link_to 'Add Movie', new_list_bookmark_path(@list) %>
